@using Client_Core_MVC.Models.JsonViewModel;
@model Allergie
@{
    ViewData["Title"] = "Edit";
}
<h1 class="alert alert-info">Edit Allergies</h1>
<form asp-action="Edit" asp-controller="Allergie" method="post">
    <input type="hidden" asp-for="allergiesID" />
  
    <div class="form-group">
        <label for="AllergiesName" class="control-label">Allergies Name:</label>
        <input type="text" id="AllergiesName" name="AllergiesName" asp-for="AllergiesName" class="form-control" />
        <span asp-validation-for="AllergiesName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2 d-flex justify-content-center">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>




